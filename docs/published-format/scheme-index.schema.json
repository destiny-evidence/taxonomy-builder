{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://destiny-evidence.github.io/taxonomy-builder/schemas/published/scheme-index.schema.json",
  "title": "Published Scheme Index",
  "description": "Version history for a single concept scheme. Lists available versions with release notes. Loaded on demand when the reader needs to switch versions. Served at /{project-id}/{scheme-id}/index.json.",
  "type": "object",
  "required": ["format_version", "scheme", "versions"],
  "additionalProperties": false,
  "properties": {
    "format_version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version for forwards compatibility."
    },
    "scheme": {
      "type": "object",
      "description": "Concept scheme metadata.",
      "required": ["id", "title"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Concept scheme UUID."
        },
        "title": {
          "type": "string",
          "description": "Vocabulary title."
        },
        "description": {
          "type": ["string", "null"],
          "description": "Vocabulary description."
        },
        "uri": {
          "type": ["string", "null"],
          "format": "uri",
          "description": "SKOS ConceptScheme URI."
        },
        "publisher": {
          "type": ["string", "null"],
          "description": "Publisher name."
        }
      }
    },
    "versions": {
      "type": "array",
      "description": "Available versions, ordered newest-first.",
      "items": {
        "type": "object",
        "required": ["version_label", "published_at", "concept_count", "path"],
        "additionalProperties": false,
        "properties": {
          "version_label": {
            "type": "string",
            "description": "Version label (e.g. \"1.0\", \"2.0-beta\")."
          },
          "published_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when this version was published."
          },
          "notes": {
            "type": ["string", "null"],
            "description": "Release notes for this version."
          },
          "concept_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of concepts in this version."
          },
          "path": {
            "type": "string",
            "description": "Filename of the vocabulary file (version UUID + .json).",
            "examples": ["01965a00-0000-7000-8000-100000000000.json"]
          }
        }
      }
    }
  }
}
