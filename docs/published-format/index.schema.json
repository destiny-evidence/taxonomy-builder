{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://destiny-evidence.github.io/taxonomy-builder/schemas/published/index.schema.json",
  "title": "Published Taxonomy Index",
  "description": "Index file for a published taxonomy project. Contains project metadata and a list of published vocabularies. One index file exists per project/version combination, served as the entry point for the reader frontend.",
  "type": "object",
  "required": ["format_version", "project", "published_at", "vocabularies"],
  "additionalProperties": false,
  "properties": {
    "format_version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version for forwards compatibility."
    },
    "project": {
      "type": "object",
      "description": "Project metadata.",
      "required": ["id", "name"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Project UUID."
        },
        "name": {
          "type": "string",
          "description": "Human-readable project name."
        },
        "description": {
          "type": ["string", "null"],
          "description": "Project description."
        },
        "namespace": {
          "type": ["string", "null"],
          "format": "uri",
          "description": "Project namespace URI."
        }
      }
    },
    "published_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of when this version was published."
    },
    "vocabularies": {
      "type": "array",
      "description": "List of vocabularies included in this published version.",
      "items": {
        "type": "object",
        "required": ["id", "title", "version_label", "term_count", "file"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Concept scheme UUID."
          },
          "title": {
            "type": "string",
            "description": "Vocabulary title."
          },
          "description": {
            "type": ["string", "null"],
            "description": "Vocabulary description."
          },
          "version_label": {
            "type": "string",
            "description": "Version label (e.g. \"1.0\", \"2.0-beta\")."
          },
          "term_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Total number of concepts in the vocabulary."
          },
          "file": {
            "type": "string",
            "description": "Relative path to the vocabulary JSON file.",
            "examples": ["vocab-3fa85f64-5717-4562-b3fc-2c963f66afa6.json"]
          }
        }
      }
    }
  }
}
