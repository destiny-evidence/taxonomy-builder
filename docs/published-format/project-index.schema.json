{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://destiny-evidence.github.io/taxonomy-builder/schemas/published/project-index.schema.json",
  "title": "Published Project Index",
  "description": "Top-level index for a published project. Contains current project metadata and a list of published schemes. Regenerated whenever any scheme publishes a new version. Served at /{project-id}/index.json.",
  "type": "object",
  "required": ["format_version", "project", "schemes"],
  "additionalProperties": false,
  "properties": {
    "format_version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version for forwards compatibility."
    },
    "project": {
      "type": "object",
      "description": "Latest project metadata.",
      "required": ["id", "name"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Project UUID."
        },
        "name": {
          "type": "string",
          "description": "Human-readable project name."
        },
        "description": {
          "type": ["string", "null"],
          "description": "Project description."
        },
        "namespace": {
          "type": ["string", "null"],
          "format": "uri",
          "description": "Project namespace URI."
        }
      }
    },
    "schemes": {
      "type": "array",
      "description": "Published concept schemes in this project.",
      "items": {
        "type": "object",
        "required": ["id", "title", "latest_version", "term_count", "path"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Concept scheme UUID."
          },
          "title": {
            "type": "string",
            "description": "Vocabulary title."
          },
          "description": {
            "type": ["string", "null"],
            "description": "Vocabulary description."
          },
          "latest_version": {
            "type": "string",
            "description": "Version label of the latest published version."
          },
          "term_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of concepts in the latest version."
          },
          "path": {
            "type": "string",
            "description": "Relative path to the latest vocabulary file.",
            "examples": ["01965a00-0000-7000-8000-000000000001/latest.json"]
          }
        }
      }
    }
  }
}
